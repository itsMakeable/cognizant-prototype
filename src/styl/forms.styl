.mkbl-label,
.mkbl-main-label
	upcase()
	color lightgray
	font-family ProximaNovaBold
	fs(1.4rem)
	position relative
	transition all 0.3s ease-in 0s
	
.mkbl-label
	top 27px
	
.mkbl-main-label
	color white
	top -3rem
	
.mkbl-subinput
	@extend $input
	padding 11px 1px
	height 40px
	line-height 1
	border-bottom 2px solid lightgray
	fs(1.8rem)
	
.mkbl-main-input
	@extend $input
	height 80px
	fs(3.2rem)
	padding 0 3rem
	
.mkbl-form-progress-bar
	width 100%
	height 3px 
	background-color lightgray
	position relative

.mkbl-form-progress-bar-progress
	width 0%
	height 3px
	position absolute
	top 0
	left 0
	bottom 0
	left 0
	background-color green
	transition width 0.5s cubic-bezier(0.68, 0, 0.2, 1.05) 0.2s
	background: -moz-linear-gradient(90deg, blue 0%, green 100%)
	background: -webkit-gradient(linear, left bottom, right top, color-stop(0%,blue), color-stop(100%,green))
	background: -webkit-linear-gradient(90deg, blue 0%,green 100%)
	background: -o-linear-gradient(90deg, blue 0%,green 100%)
	background: -ms-linear-gradient(90deg, blue 0%,green 100%)
	background: linear-gradient(90deg, blue 0%,green 100%)
	
.mkbl-form-arrow
	position absolute
	right 20px
	top 0
	bottom -20px
	margin auto
	size 32px
	color blue
	