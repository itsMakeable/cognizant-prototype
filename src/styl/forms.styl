$input
	background-color rgba(0,0,0,0)
	border none
	width 100%
	color blue
	&:focus
		background-color rgba(0,0,0,0.1)

.mkbl-fieldset
	display block
	margin-top 50px
	position relative
	width 100%
	&.is-hidden
		display none
	&.is-active
		.mkbl-label
			top -10px
			color white
			transition all 0.4s cubic-bezier(0.68, 0, 0.2, 1.05) 0.1s
		.mkbl-subinput
			transition all 0.3s ease 
		.mkbl-fieldset-bg
			height 40px
			background-color rgba(0,0,0,0.1)
			transition all 0.4s ease-in-out 0s
	&.is-filled
		.mkbl-label
			top -10px
			
.mkbl-fieldset-bg
	height 0px
	background-color rgba(0,0,0,0)
	position absolute
	width 100%
	bottom 0px
	transform-origin 50% 50%
	transition all 0.1s ease 0.1s
	
