.mkbl-slide-container
	width 100%
	overflow-x hidden
	overflow hidden
	
.mkbl-slide-inner-wrapper
	padding 36px 38px 36px 38px

.slide-tag
	background-color white
	color darkblue
	padding 8px 10px 7px 10px
	margin-bottom 56px
	line-height 1
	fs(1.8rem)
	display inline-block

.mkbl-slide
	transform translate(-50%,-50%) scale(0.6)
	width 450px
	height auto
	display inline-block
	top 50%
	left 50%
	opacity 0
	position absolute
	border-top 1px solid rgba(255,255,255,0.5)
	border-bottom 1px solid rgba(255,255,255,0.5)
	min-height 350px
	cursor pointer
	transition all 0.9s cubic-bezier(0.68, 0, 0.5, 1.05)
	hr
		width 0%
		opacity 0
		transition opacity 0.3s linear, width 0s linear 0.3s
	h3
		padding-bottom 6px
	h4
		padding-bottom 26px
	h6
		padding-bottom 12px
	p
		color white
		font-family ProximaNovaLight
	.mkbl-slide-body
		opacity 0
		// transform translateY(20px)
		transition opacity 0.3s linear

.mkbl-slide-bg
	position absolute
	top 0
	bottom 0
	width 100%
	height 100%
	opacity 0
	z-index -1
	transition opacity 0.4s ease 0.2s

.mkbl-slider-bottom-group
	position absolute
	bottom 36px
	margin-right 38px

.mkbl-slide-body
	transition all 0.6s linear 0.4s
		
.slide-active
	opacity 1
	z-index 1
	min-height 550px
	transform translate(-50%,-50%) scale(1)
	transition all 0.9s cubic-bezier(0.68, 0, 0.5, 1.05) 0s
	border-top 1px solid rgba(255,255,255,0)
	border-bottom 1px solid rgba(255,255,255,0)
	.mkbl-slide-bg
		opacity 1
		transition opacity 0.6s ease 0.4s
	.mkbl-slide-body
		opacity 1
		transition opacity 0.4s ease 0.4s
	hr
		transition width 0.4s ease-in-out 0.4s
		width 100%
		opacity 1
	
.slide-before-2
	transform translate(-100%,-50%) scale(0.6)
	transition all 0.9s cubic-bezier(0.68, 0, 0.5, 1.05)
	opacity 0
	
.slide-before-1
	transform translate(-140%,-50%) scale(0.8)
	transition all 0.9s cubic-bezier(0.68, 0, 0.5, 1.05)
	opacity 1
	&:hover
		border-top 1px solid rgba(255,255,255,0.9)
		border-bottom 1px solid rgba(255,255,255,0.9)
		transition all 0.3s cubic-bezier(0.68, 0, 0.5, 1.05)
		
	
.slide-after-1
	transform translate(40%,-50%) scale(0.8)
	transition all 0.9s cubic-bezier(0.68, 0, 0.5, 1.05)
	opacity 1
	&:hover
		border-top 1px solid rgba(255,255,255,0.9)
		border-bottom 1px solid rgba(255,255,255,0.9)
		transition all 0.3s cubic-bezier(0.68, 0, 0.5, 1.05)

.slide-after-2
	transform translate(0%,-50%) scale(0.6)
	transition all 0.9s cubic-bezier(0.68, 0, 0.5, 1.05)
	opacity 0
	
.mkbl-slide-nav
	// @extend $vertical-align
	position absolute
	size 7rem 100%
	padding 20px 40px
	opacity 1
	transition transform 0.1s ease
	// margin-top 0px
	z-index 100
	cursor pointer
	svg
		transition opacity 0.3s ease
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		margin auto
		&:hover
			opacity 0.6
	@media screen and (max-width: 1260px)
		background-color black
		background: -moz-linear-gradient(90deg, rgba(darkblue,0) 0%, rgba(black,0.5) 100%)
		background: -webkit-gradient(linear, left bottom, right top, color-stop(0%,rgba(darkblue,0)), color-stop(100%,rgba(black,0.5)))
		background: -webkit-linear-gradient(90deg, rgba(darkblue,0) 0%,rgba(black,0.5) 100%)
		background: -o-linear-gradient(90deg, rgba(darkblue,0) 0%,rgba(black,0.5) 100%)
		background: -ms-linear-gradient(90deg, rgba(darkblue,0) 0%,rgba(black,0.5) 100%)
		background: linear-gradient(90deg, rgba(darkblue,0) 0%,rgba(black,0.5) 100%)

		
.mkbl-right-arrow
	right 0
	transform rotate(360deg)
	// &:active
	// 	transform rotate(360deg) scale(0.9)
		
.mkbl-left-arrow
	left 0
	transform rotate(180deg)
	transform-origin 50% 50%
	// &:active
	// 	transform rotate(180deg) scale(0.9)