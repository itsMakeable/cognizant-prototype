font-size = 10
fs(size)
	if (unit(size) == 'rem')
		font-size round(unit((font-size*size), px))
		font-size size
	else
		font-size size

.bodyHidden
	overflow: hidden

.hidden
	display none
	opacity 0
	visibility hidden


// absolute positioning
$vertical-align
	position absolute
	top 50%
	transform translateY(-50%)

$center-align
	position absolute
	left 50%
	top 50%
	transform translate(-50%,-50%)
	margin auto

$horizontal-align
	position absolute
	left 50%
	transform translateX(-50%)
	margin auto

.trans-center
	@extend $center-align

.ab-center
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	margin auto

.vertical-align
	@extend $vertical-align

.dead-center
	@extend $center-align

// circle
.circle
	border-radius 50%
	> img,
	> div,
	> span
		border-radius inherit

// blur

$blur
	fixed top 0px bottom 0px right 0px left 0px
	// z-index: 501
	min-height 100%
	// padding 10px
	background-color rgba(black,0.1)
	filter url(#blur)
	-webkit-filter blur(1px)
	filter blur(1px)

.blur
	&.is-on
		// @extend $blur

// overlay

.overlay
	background-color rgba(black,0.8)
	fixed top 0 bottom 0 right 0 left 0
	z-index 800
	> h1,
	> h2,
	> h3,
	> h4,
	> h5,
	> h6,
	> li,
	> p
		color white
	> hr
		border-bottom 1px solid white
	.select__text
		p
			color white
	.select__cta
		color cyan

.overlay-content
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	z-index: 600;
	overflow: auto
	background-color white
	&.bg--taupe
		background-color taupe

.fullscreen
	min-height 100vh
	min-width 100vw

// dropshadow
.dropshadow
	box-shadow 0px 3px 1px 0px rgba(black,0.25)
