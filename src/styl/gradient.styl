.gradient-1
	background-color black
	background: -moz-linear-gradient(35deg, darkblue 0%, black 100%)
	background: -webkit-gradient(linear, left bottom, right top, color-stop(0%,darkblue), color-stop(100%,black))
	background: -webkit-linear-gradient(35deg, darkblue 0%,black 100%)
	background: -o-linear-gradient(35deg, darkblue 0%,black 100%)
	background: -ms-linear-gradient(35deg, darkblue 0%,black 100%)
	background: linear-gradient(35deg, darkblue 0%,black 100%)

.no-gradient .gradient-1
	background-color darkblue
	
.gradient-2
	background-color black
	background: -moz-linear-gradient(90deg, blue 0%, green 100%)
	background: -webkit-gradient(linear, left bottom, right top, color-stop(0%,blue), color-stop(100%,green))
	background: -webkit-linear-gradient(90deg, blue 0%,green 100%)
	background: -o-linear-gradient(90deg, blue 0%,green 100%)
	background: -ms-linear-gradient(90deg, blue 0%,green 100%)
	background: linear-gradient(90deg, blue 0%,green 100%)

.no-gradient .gradient-2
	background-color darkblue